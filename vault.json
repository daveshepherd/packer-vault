{
  "variables": {
    "ireland_vpc_id": "",
    "ireland_subnet_id": "",
    "london_vpc_id": "",
    "london_subnet_id": "",
    "vault_version": ""
  },
  "builders": [
    {
      "name": "aws-ireland",
      "type": "amazon-ebs",
      "region": "eu-west-1",
      "vpc_id": "{{user `ireland_vpc_id`}}",
      "subnet_id": "{{user `ireland_subnet_id`}}",
      "associate_public_ip_address": true,
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "consul-*",
          "root-device-type": "ebs"
        },
        "owners": [
          "238573916854"
        ],
        "most_recent": true
      },
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "vault-{{user `vault_version`}}-{{timestamp}}"
    },
    {
      "name": "aws-london",
      "type": "amazon-ebs",
      "region": "eu-west-2",
      "vpc_id": "{{user `london_vpc_id`}}",
      "subnet_id": "{{user `london_subnet_id`}}",
      "associate_public_ip_address": true,
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "consul-*",
          "root-device-type": "ebs"
        },
        "owners": [
          "238573916854"
        ],
        "most_recent": true
      },
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "vault-{{user `vault_version`}}-{{timestamp}}"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "file/vault.json",
      "destination": "/tmp/vault.json"
    },
    {
      "type": "file",
      "source": "file/systemd.service",
      "destination": "/tmp/systemd.service"
    },
    {
      "type": "shell",
      "script": "shell/vault.sh",
      "environment_vars": [
        "VAULT_VERSION={{user `vault_version`}}"
      ]
    }
  ]
}

